{
	"name": "probo",
	"version": "1.0.0",
	"description": "An opinion trading platform where users can trade on the outcome of future events.",
	"private": "true",
	"type": "module",
	"scripts": {
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"dev:api": "bun --filter @probo/api-service dev",
		"start:api": "bun --filter @probo/api-service start",
		"start:stream:service": "bun --filter @probo/stream-service start",
		"db:generate": "bun run --filter=@probo/database db:generate",
		"db:migrate": "bun run --filter=@probo/database db:migrate",
		"db:studio": "bun run --filter=@probo/database db:studio",
		"db:push": "bun run --filter=@probo/database db:push",
		"db:seed": "bun run --filter=@probo/database db:seed",
		"web:dev": "bun run --filter=@probo/web-app dev",
		"web:build": "bun run --filter=@probo/web-app build",
		"db:processor:start": "bun run --filter=@probo/db-processor start"
	},
	"workspaces": [
		"apps/*",
		"packages/*",
		"services/*"
	],
	"author": {
		"name": "Rehan",
		"email": "official.rehan.me@gmail.com"
	},
	"license": "Apache-2.0",
	"keywords": [
		"probo",
		"microservices",
		"trading system",
		"Hono",
		"Bun",
		"postgresql",
		"redis",
		"kafka",
		"golang"
	],
	"devDependencies": {
		"@types/bun": "latest",
		"prettier": "^3.6.2"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/rehan-adi/probo"
	},
	"packageManager": "bun@1.2.17",
	"engines": {
		"bun": ">=1.2.17"
	}
}
